# Card configuration for weekly Trello list
# Copy this file to cards.yaml and customize

cards:
  - title: "Weekly planning"
    day_of_week: "monday"
    hour: 9
    minute: 0
    labels:
      - "Work"
    description: "Review goals and plan the week ahead"
    checklists:
      - name: "Planning steps"
        items:
          - "Review last week's progress"
          - "Set goals for this week"
          - "Prioritize tasks"

  - title: "Team standup"
    day_of_week: "tuesday"
    hour: 10
    minute: 30
    labels:
      - "Work"
      - "Meeting"

  - title: "Review tasks"
    day_of_week: "friday"
    hour: 16
    minute: 0
    labels:
      - "Work"
    description: "End of week review"
    checklists:
      - name: "Review checklist"
        items:
          - "Check completed tasks"
          - "Update project status"
          - "Prepare next week outline"
